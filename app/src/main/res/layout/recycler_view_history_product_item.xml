<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/bookTitleTextView"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Ten sach"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/amountTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bookTitleTextView"
        app:layout_constraintStart_toStartOf="@id/bookTitleTextView"
        android:text="@string/amount"/>
    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/amountTitleTextView"
        app:layout_constraintStart_toEndOf="@id/amountTitleTextView"
        android:layout_marginStart="5dp"
        android:text="1"/>
    <View
        style="@style/VerticalSeparator"
        app:layout_constraintStart_toEndOf="@id/amountTextView"
        app:layout_constraintTop_toTopOf="@id/amountTextView"
        app:layout_constraintBottom_toBottomOf="@id/amountTextView"
        android:background="?android:attr/listDivider"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/productValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/amountTextView"
        app:layout_constraintStart_toEndOf="@id/amountTextView"
        android:layout_marginStart="10dp"
        android:text="1000d"/>
</androidx.constraintlayout.widget.ConstraintLayout>
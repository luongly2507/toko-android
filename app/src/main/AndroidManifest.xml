<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Toko"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".VerificationActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.BookDetailActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.SearchResultBookActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.SearchResultActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.CartActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.SearchBookActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>